<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/2000/REC-xhtml1-20000126/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>CampusMap</title>
<meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
<link rel="stylesheet" href="<TMPL_VAR NAME=CSS_DIR>/main.css" />
<link rel="stylesheet" href="<TMPL_VAR NAME=CSS_DIR>/print.css" />
<script type="text/javascript" src="<TMPL_VAR NAME=HTML_DIR>/menus.js"></script>
</head>
<body>

<style type="text/css">
	#mapImage {
		width: <TMPL_VAR NAME=WIDTH>px;
		height: <TMPL_VAR NAME=HEIGHT>px;
	}
</style>

<script type="text/javascript">
	var hidden;

	/* if you're looking at this source from a browser, I'll bet you're
	 * wondering why it's written this way :) */
	var showToggle = (<TMPL_IF NAME=SRC_FOUND>1<TMPL_ELSE>0</TMPL_IF>||<TMPL_IF NAME=DST_FOUND>1<TMPL_ELSE>0</TMPL_IF>);

	function toggle(){
		hidden ? show() : hide();
	}
	function hide(){
		<TMPL_IF NAME=SRC_FOUND>
			document.getElementById("little_src").style.display = "none";
		</TMPL_IF>
		<TMPL_IF NAME=DST_FOUND>
			document.getElementById("little_dst").style.display = "none";
		</TMPL_IF>
		document.getElementById("toggle_button").innerHTML = "[Show Close-Ups]";
		hidden = true;
	}
	function show(){
		<TMPL_IF NAME=SRC_FOUND>
			document.getElementById("little_src").style.display = "block";
		</TMPL_IF>
		<TMPL_IF NAME=DST_FOUND>
			document.getElementById("little_dst").style.display = "block";
		</TMPL_IF>
		document.getElementById("toggle_button").innerHTML = "[Hide Close-Ups]";
		hidden = false;
	}
</script>

<div id="container">
	<div id="printHeader">
		<div id="printHeaderLeft">
			<img src="<TMPL_VAR NAME=IMG_DIR>/maplogo_small.png"
				width="151" height="77" alt="Logo" />
		</div>
		<div id="printHeaderCenter">
			<strong><TMPL_VAR NAME=TXT_NOW></strong><br />
			<div id="toggle_div" style="display: none;">
				<a id="toggle_button" href="javascript:toggle()">[Hide Close-Ups]</a>
			</div>
			<script type="text/javascript">
				// this looks cheap, but it degrades nicely: if
				// javascript isn't enabled, you don't see an
				// inoperative button
				if(showToggle)
					document.getElementById("toggle_div").style.display = "inline";
			</script>
		</div>
	</div>


	<div id="printLeft">
		<TMPL_IF NAME=SRC_FOUND>
			<p><span id="fromTxt">
				<b>From</b>: <TMPL_VAR NAME=TXT_SRC>
			</span></p>

			<div id="little_src">
				<img src="<TMPL_VAR NAME=IMG_SRC>" />
			</div>
		<TMPL_ELSE>
			<p><TMPL_VAR NAME=SRC_HELP></p>
		</TMPL_IF>
		<TMPL_IF NAME=DST_FOUND>
			<p><span id="toTxt">
				<b>To</b>: <TMPL_VAR NAME=TXT_DST>
			</span></p>

			<div id="little_dst">
				<img src="<TMPL_VAR NAME=IMG_DST>" />
			</div>
		<TMPL_ELSE>
			<p><TMPL_VAR NAME=DST_HELP></p>
		</TMPL_IF>

		<TMPL_IF NAME=PATH_FOUND>
			<p><b>Distance</b>: <TMPL_VAR NAME=DISTANCE> mi</p>
			<p><b>Time</b>: <span id="time"><TMPL_VAR NAME=TIME></span> min at <TMPL_VAR NAME=MPM> minutes per mile.</p>
		</TMPL_IF>
		<TMPL_IF NAME=TXT_ERROR>
			<p><b><TMPL_VAR NAME=TXT_ERROR></b></p>
		</TMPL_IF>
		<!-- end status text -->

		<!-- if this is blank, don't screw up
		alignment...non-breaking space -->
		&nbsp;
	</div>

	<div id="printRight">

		<img id="mapImage" src="<TMPL_VAR NAME=IMG_VIEW>" />

		<div id="printFooter">
				&copy; 2005
				<a href="&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#109;&#49;&#107;&#101;&#108;&#108;&#121;&#64;&#117;&#99;&#115;&#100;&#46;&#101;&#100;&#117;">Michael Kelly</a> and
				<a href="&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#100;&#108;&#105;&#110;&#100;&#113;&#117;&#105;&#64;&#117;&#99;&#115;&#100;&#46;&#101;&#100;&#117;">David Lindquist</a>.
				CampusMap is not affiliated with UCSD.
		</div>

	</div>

</div>

</body>
</html>

